
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">登录</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", new RouteValueDictionary() { { "returnUrl", Model.ReturnUrl } }, FormMethod.Post))
                {
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="用户名" name="username" type="text" autofocus>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="密码" name="password" type="password" value="">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input name="remember" type="checkbox" value="Remember Me">记住密码
                            </label>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <button id="LoginButton" type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                    </fieldset>

                }

