
@{
    ViewBag.Title = "SaleSoftwareRecord";
    ViewBag.ActiveMenu = "SaleSoftwareRecord";
}

@section styles{
    <link rel="stylesheet" href="~/Abp/Lib/bootstrap-table/dist/bootstrap-table.min.css">
    <link rel="stylesheet" href="~/Abp/Lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="~/Abp/Lib/bootstrap-daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/Content/salesyscss/custom.css"/>
}

@section Scripts{
    <script src="~/Abp/Lib/jquery.serializeJSON/jquery.serializejson.min.js"></script>
    <script src="~/Abp/Lib/bootstrap-table/dist/bootstrap-table.min.js"></script>
    <script src="~/Abp/Lib/bootstrap-table/dist/locale/bootstrap-table-zh-CN.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script><!--using cdn server-->
    <script src="~/Abp/Lib/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/Abp/Lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Abp/Lib/bootstrap-datepicker/dist/locales/bootstrap-datepicker.zh-CN.min.js"></script>
    <script src="~/Scripts/others/data-format.js"></script>

}
<div class="row">
    <div class="row title">
        <div class="col-sm-12">
            <h3 class="page-header">销售记录</h3>
        </div>
    </div>
    <div class="col-sm-12">
        <div id="toolbar">
            <div class="form-inline" role="form">
                <div class="form-group">
                    <label for="brandList">品牌: </label>
                    @Html.DropDownList("BrandList", null, new { @class = "form-control input-sm", id = "Brand" })
                </div>
                <div class="form-group">
                    <label for="serviceInfoList">产品: </label>
                    @Html.DropDownList("ServiceInfoList", null, new { @class = "form-control input-sm ", id = "ServiceInfo" })
                </div>
                <div class="form-group">
                    <label>日期范围: </label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" id="reservation" name="reservation" class="form-control pull-right input-sm">
                    </div>
                </div>
                <div class="form-group">
                    <label>订单号: </label>
                    <input id="orderId" name="orderId" class="form-control input-sm " type="text">
                </div>
            </div>
            <div class="form-inline" role="form">

                <div class="form-group">
                    <label>客户通行证: </label>
                    <input name="userPassport" class="form-control input-sm " type="text">
                </div>
                <div class="form-group">
                    <label>代理商: </label>
                    <input name="Agent" class="form-control input-sm " type="text">
                </div>
                <div class="form-group">
                    <label>销售: </label>
                    <input name="SalesAdmin" class="form-control input-sm " type="text">
                </div>

                <div class="form-group">
                    <a href="#" class="btn btn-link"><i class=""></i>前一天</a>
                    <a href="#" class="btn btn-link"><i class=""></i>后一天</a>
                </div>
                <button id="search" class="btn btn-info btn-sm" type="button">
                    <i class="fa fa-search"></i>筛选数据
                </button>
            </div>
        </div>

        <table id="table"
               data-toggle="table"
               data-toolbar="#toolbar"
               data-show-refresh="true"
               data-show-toggle="true"
               data-show-columns="true"
               data-query-params="queryParams"
               data-pagination="true"
               data-page-size="50"
               data-page-list="[50,100,200]"
               data-side-pagination="server"
               data-method="get"
               data-row-style="rowStyle"
               data-url="/api/SalesRecord/GetList">
            <thead>
                <tr>
                    <th data-field="id">单号</th>
                    <th data-field="serviceName">服务名称</th>
                    <th data-field="userPassport">用户通行证</th>
                    <th data-field="cost" data-formatter="moneyFomatter">销售价</th>
                    <th data-field="profit" data-formatter="moneyFomatter">利润</th>
                    <th data-field="salesDateTime" data-formatter="dateFomatter">销售日期</th>
                    <th data-field="authExpiration" data-formatter="dateFomatter">有效期</th>
                    <th data-field="agentUserName">代理商</th>
                    <th data-field="adminUserName">销售</th>
                    <th data-field="remarks">备注</th>
                    <th data-field="orderState" data-formatter="operateFormatter"
                        data-width="60px" data-events="operateEvents">操作</th>
                </tr>
            </thead>

        </table>
    </div>
</div>

<script type="text/javascript">
    var $table = $('#table'),
        $search = $('#search');

    function queryParams(params) {
        $('#toolbar')
            .find('input[name]')
            .each(function () {
                params[$(this).attr('name')] = $(this).val();
            });
        $('#toolbar')
            .find('select[name]')
            .each(function () {
                params[$(this).attr('id')] = $(this).val();
            });
        return params;
    }

    function dateFomatter(value) {
        return new Date(value).pattern('yyyy-MM-dd hh:mm:ss');
    }

    function moneyFomatter(value) {
        return value.formatMoney(2, " ¥", ".", ",")
    }

    function operateFormatter(value, row, index) {
        if (value === 2) {
            return [
                '<a class="undo" href="javascript:void(0)" title="undo">',
                '<i class="fa fa-undo"></i>',
                '撤销',
                '</a>'
            ].join('');
        }

    }

    function responseHandler(res) {
        return res.rows;
    }

    function getHeight() {
        return $(window).height() - $('.title').outerHeight(true);
    }

    function rowStyle(row, index) {
        var classes = ['active', 'success', 'info', 'warning', 'danger'];
        if (row['orderState'] === 2) {
            return {
                classes: classes[2]
            };
        }
        //if (row['orderState'] === 1) {
        //    return {
        //        classes: classes[2]
        //    };
        //}
        if (row['orderState'] === 0) {
            return {
                classes: classes[4]
            };
        }
        return {};
    }

    window.operateEvents = {
        'click .undo': function (e, value, row, index) {
            abp.message.confirm("您确定要撤销单号为" + row['id'] + "的订单吗?","撤销订单", function (isConfirmed) {
                if (isConfirmed) {
                    console.log(row['id']);
                    $.ajax({
                        url: '/api/SalesRecord/'+row['id'],
                        type: 'PUT',
                        contentType: "application/json; charset=utf-8",
                        //data: { 'id': row["id"] },   /*注意路由匹配规则*/
                        datatype: 'json',
                        success: function (data) {
                            debugger;
                            if (data['code'] === 200) {
                                abp.notify.success(data['data'], data['msg']);
                                $table.bootstrapTable('refresh');
                            } else {
                                abp.notify.error("订单撤销失败,详情:" + data['Data'], data['msg']);
                            }
                        },
                        error: function (xhr) {
                            abp.notify.error("订单撤销失败，服务器内部错误,详情:" + xhr.responseText);
                        }
                    });

                }
            });
        }
    }

    $(function () {

        $('#reservation').daterangepicker();

        $table.bootstrapTable({
            height: getHeight()
            //pageList:"[50,20,40,100]",
        });

        $search.click(function () {
            $table.bootstrapTable('refresh');
        });
    });



</script>

