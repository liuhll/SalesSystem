@model IList<Jeuci.SalesSystem.Brands.Dtos.BrandInfoDto>

@{
    ViewBag.Title = "SaleSoftwareIndex";
    ViewBag.ActiveMenu = "SaleSoftwareRecord";
    var count = 1;
}
@section Scripts{
    <script src="~/Scripts/sales/SalesDialog.js"></script>
    <script src="~/Abp/Lib/jquery.serializeJSON/jquery.serializejson.min.js"></script>
   
}

<div class="row">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header">销售</h3>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="col-lg-12">
        <div class="panel-group" id="accordion">
            @foreach (var brandItem in Model)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#@Html.Raw("collapse"+count)">@brandItem.BrandName</a>
                        </h2>
                    </div>
                    <div id="@Html.Raw("collapse"+count)" class="@Html.Raw(count == 1 ?"panel-collapse collapse in":"panel-collapse collapse")">
                        <div class="panel-body">
                            <div class="row">
                                @foreach (var lotterySeed in brandItem.ServiceInfos)
                                {
                                    <div class="col-sm-2">
                                        <a href="javascript:void(0)" id="@lotterySeed.Id" class="btn btn-primary lottery-seed" data-url="@Url.Action("SalesService","SalesSoftware",new {area="Sales"})" data-toggle="modal" data-target="#myModal">
                                            @lotterySeed.ServiceName
                                        </a>
                                    </div>
                                }
                            </div>
                            </div>
                    </div>
                </div>
                count++;
            }
          
        </div>
    </div>
</div>
