@model Jeuci.SalesSystem.AdminWeb.Models.Account.LoginFormViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@section Scripts
{
    <script src="~/Scripts/SHA256.js"></script>
    <script src="~/Scripts/account/Login.js"></script>  
}

<div id="LoginArea" class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">登录</h3>
            </div>
            <div class="panel-body">
                <form role="form" action="@(Url.Action("Login","Account"))">
                    <fieldset>
                        <div class="hidden">
                            @Html.HiddenFor(m => m.ReturnUrl)
                        </div>
                        <div class="form-group">
                            <input id="UserNameInput" class="form-control" placeholder="用户名" type="text" autofocus>
                        </div>
                        <div class="form-group">
                            <input id="PasswordInput" class="form-control" placeholder="密码" type="password" value="">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input id="RememberMeInput" type="checkbox" value="Remember Me">记住密码
                            </label>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <button id="LoginButton" class="btn btn-lg btn-success btn-block">Login</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
